<resources >
    <!-- text style (font-size-color) -->
    <style name="LargeBoldTextStyle">
        <item name="fontFamily">@font/iran_yekan_bakh_bold</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="MediumBoldTextStyle">
        <item name="fontFamily">@font/iran_yekan_bakh_bold</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="SmallBoldTextStyle">
        <item name="fontFamily">@font/iran_yekan_bakh_bold</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>
    <style name="LargeTextStyle">
        <item name="fontFamily">@font/iran_yekan_bakh_regular</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="MediumTextStyle">
        <item name="fontFamily">@font/iran_yekan_bakh_regular</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="SmallTextStyle">
        <item name="fontFamily">@font/iran_yekan_bakh_regular</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="ButtonDefault" >
        <item name="fontFamily">@font/iran_yekan_bakh_bold</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:elevation">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
    </style>


    <style name="BottomNavTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/iran_yekan_bakh_bold</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>
    <style name="NoPaddingBottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemPaddingTop">0dp</item>
        <item name="itemHorizontalPadding">0dp</item>
        <item name="itemPaddingBottom">0dp</item>
    </style>

    <style name="InputText">
        <item name="fontFamily">@font/iran_yekan_bakh_bold</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:inputType">text</item>
        <item name="colorControlActivated">?attr/colorOnSurface</item>
    </style>
    <style name="InputTextTheme">
        <item name="colorControlActivated">?attr/colorOnSurface</item>
    </style>
</resources>
